document.getElementById('sendOrder').addEventListener('click', ()=>{
  const table = document.getElementById('tableNumber').value;
  if(!table){ alert("Veuillez entrer le numÃ©ro de table !"); return; }

  let orderText = `Table ${table}\n`;
  for(const item in cart){
    if(cart[item] >0) orderText += `${item} x ${cart[item]}\n`;
  }

  const templateParams = {
    to_email: "bar.timelessofficiel@gmail.com",  // ðŸ”¥ Nouvelle adresse mail
    table_number: table,
    order_details: orderText
  };

  emailjs.send("TON_SERVICE_ID","TON_TEMPLATE_ID",templateParams)
    .then(()=>{ 
      document.getElementById('confirmation').innerText="Commande envoyÃ©e !"; 
      for(const item in cart) cart[item]=0; 
      updateCart();
    })
    .catch(()=>{ document.getElementById('confirmation').innerText="Erreur lors de l'envoi."; });
});
